<%- include partials/head.ejs %>
<%- include partials/header.ejs %>


<div class="container-fluid mensagem">
    <br>
    <br>
    <br>
    <div class="row">
        <div class="col">
            <div class="card" id="card-mensagem">
                <div class="card-body text-center">
                    <h5 class="card-title "><%=mensagens.titulo%></h5>
                    <h6 class="card-subtitle mb-2 text-muted"> <%=mensagens.nome + mensagens.ultimoNome%></h6>
                    <p class="card-text lead italico"><%=mensagens.descricao%></p>
                    <a href="#" class="card-link"><%=mensagens.createdAt%></a>
                </div>
            </div>
        </div>
    </div>

    <br>
    <br>

    <div class="row">
        <div class="container">
            <div class="col">
                <form action="" style="padding: 40px;">
                    <div class="form-group">
                        <input type="hidden" value="<%=mensagens.id%>">
                    </div>
                    <div class="form-group">
                        <label style="color: #fff; font-size: 2em;">Responder</label>
                        <textarea rows="4" class="form-control"></textarea>
                    </div>
                    <button class="btn btn-lg btn-primary">Enviar</button>
                </form>
            </div>
        </div>

    </div>

</div>



<%- include partials/footer.ejs %>