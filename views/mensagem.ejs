<%- include partials/head.ejs %>
<%- include partials/header.ejs %>

<div class="container-fluid table-mensagem">
    <br>
    <table class="table table-hover">
        <thead class="bg-secondary text-light">
            <tr>
                <th>Nome</th>
                <th>Ultimo Nome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Detalhes</th>
            </tr>
        </thead>
        <tbody>
            <% mensagens.forEach(mensagem =>{ %>
                <tr>
                    <td><%=mensagem.nome%></td>
                    <td><%=mensagem.ultimoNome%></td>
                    <td><%=mensagem.email%></td>
                    <td><%=mensagem.telefone%></td>
                    <td><a href="/detalhemensagem/<%=mensagem.id%>"><i class="fas fa-eye"></i></a></td>
                </tr>
            <%})%>


        </tbody>
    </table>
</div>

<%- include partials/footer.ejs %>